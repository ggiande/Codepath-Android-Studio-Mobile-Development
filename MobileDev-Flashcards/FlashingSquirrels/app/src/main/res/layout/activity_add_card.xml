<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff092b0"
    tools:context=".AddCardActivity">


    <Button
        android:id="@+id/cancelButton"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="307dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/cancelicon" />

    <Button
        android:id="@+id/savingButton"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_alignTop="@+id/cancelButton"
        android:layout_alignBottom="@+id/cancelButton"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="-6dp"
        android:layout_marginBottom="-6dp"
        android:background="@drawable/saving_icon" />

    <EditText
        android:id="@+id/AddQuestion"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_above="@+id/AddHint"
        android:layout_alignStart="@+id/AddHint"
        android:layout_alignEnd="@+id/AddHint"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="145dp"
        android:hint="@string/question_hint"
        android:importantForAutofill="no"
        android:inputType="text" />

        <EditText
            android:id="@+id/AddHint"
            android:layout_width="340dp"
            android:hint="@string/answer_hint"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="34dp"
            android:importantForAutofill="no"
            android:inputType="text" />

</RelativeLayout>